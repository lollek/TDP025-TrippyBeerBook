<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beer_add_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddBeerActivity"
    tools:ignore="MergeRootFrame">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beerNameText"
        android:hint="@string/text_beer_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/breweryNameText"
        android:layout_gravity="center_horizontal"
        android:hint="@string/text_brewery" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beerTypeText"
        android:layout_gravity="center_horizontal"
        android:hint="@string/text_beer_type" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/countryNameText"
        android:layout_gravity="center_horizontal"
        android:hint="@string/text_country_of_origin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/percentageText"
        android:layout_gravity="center_horizontal"
        android:hint="@string/text_alcohol_percentage" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_add_new_beer"
        android:id="@+id/addBeerButton"
        android:layout_gravity="center_horizontal"
        android:onClick="addBeer"/>
</LinearLayout>
