<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BeerDetailFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/do_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_modify"
            android:onClick="modify"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="16dp"
                android:text="@string/text_beer_name"/>
            <TextView
                android:id="@+id/beer_name"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>
            <EditText
                android:id="@+id/beer_name_edit"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="textAutoComplete"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="16dp"
                android:text="@string/text_brewery"/>
            <TextView
                android:id="@+id/brewery_name"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>
            <EditText
                android:id="@+id/brewery_name_edit"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="textAutoComplete"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="16dp"
                android:text="@string/text_beer_type"/>
            <TextView
                android:id="@+id/beer_type"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>
            <EditText
                android:id="@+id/beer_type_edit"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="textAutoComplete"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="16dp"
                android:text="@string/text_country_of_origin"/>
            <TextView
                android:id="@+id/country"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp" />
            <EditText
                android:id="@+id/country_edit"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="textAutoComplete"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="16dp"
                android:text="@string/text_alcohol_percentage"/>
            <TextView
                android:id="@+id/percentage"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp" />
            <EditText
                android:id="@+id/percentage_edit"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="numberDecimal"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>