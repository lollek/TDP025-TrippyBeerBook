<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TimePicker
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_toEndOf="@+id/datePicker"
            android:layout_below="@+id/title_time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/actions"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/title_action"
            android:contentDescription="@string/title_action"
            android:textAlignment="center"
            android:layout_alignParentTop="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_date"
            android:id="@+id/title_date"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:layout_below="@+id/timePicker"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_time"
            android:id="@+id/title_time"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/spinner"
            android:layout_alignLeft="@+id/title_action"
            android:layout_alignStart="@+id/title_action" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_action"
            android:id="@+id/title_action"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <DatePicker
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:calendarViewShown="false"
            android:layout_below="@+id/title_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>